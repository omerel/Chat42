<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Distance from you:"
        android:layout_width="253dp"
        android:layout_height="35dp"
        android:id="@+id/textView_distance_search"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/textView_distance"
        android:layout_marginEnd="8dp" />

    <SeekBar
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_distance"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance_search"
        style="@style/Widget.AppCompat.SeekBar" />

    <TextView
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_min_distance"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/seekBar_distance"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance_search" />

    <TextView
        android:text="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_max_distance"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/seekBar_distance"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance_search" />

    <TextView
        android:text="10"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:id="@+id/textView_distance"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>